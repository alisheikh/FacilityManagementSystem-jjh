<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Main.Entities.maintenance">
    <class name="MaintenanceRequest" table="maintenance_request">
        <id name="id" column="id"/>
        <property name="request"  column="request"/>
        <property name="dateRequested"  column="date_requested"/>
        <property name="completionDate"  column="completion_date"/>
        <property name="hoursToComplete"  column="hours_to_complete"/>
        <one-to-one name="maintenanceStaff" class="Main.Entities.maintenance.MaintenanceStaff" cascade="save-update, delete"></one-to-one>
        <one-to-one name="unit" class="Main.Entities.Facility.Facility" cascade="save-update, delete"></one-to-one>
    </class>
</hibernate-mapping>