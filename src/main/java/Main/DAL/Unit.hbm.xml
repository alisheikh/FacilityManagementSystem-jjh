<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Main.Entities.Facility">
    <class name="Unit" table="unit">
        <id name="id" column="id"/>
        <id name="facilityId" column="facility_id"/>
        <property name="capacity" column="capcity"/>
        <property name="unitNumber"  column="unitNumber"/>
        <one-to-many name="usages" class="Main.Entities.Facility.Usage" cascade="save-update, delete"/>
        <one-to-many name="users" class="Main.Entities.Facility.User" cascade="save-update, delete"/>
    </class>
</hibernate-mapping>