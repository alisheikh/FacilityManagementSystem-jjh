<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Main.Entities.Facility">
    <class name="Facility" table="facility">
        <id name="id" type="integer" column="id"/>
        <property name="name" column="name"/>
        <property name="capacity"  column="capacity"/>
        <property name="buildingNumber" column="building_number"/>
        <set name="units" table="unit"
             inverse="true" lazy="true" fetch="select">
            <key>
                <column name="unit_id" not-null="true" />
            </key>
            <one-to-many class="Main.DAL.UnitDAO" />
        </set>

    </class>
</hibernate-mapping>