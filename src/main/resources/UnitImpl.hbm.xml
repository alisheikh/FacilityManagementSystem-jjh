<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Main.Entities.Facility">
    <class name="UnitImpl" table="unit">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="increment" />
        </id>
        <many-to-one name="facility" class="Main.Entities.Facility.FacilityImpl" fetch="select"  cascade="save-update">
            <column name="facility_id" sql-type="serial"  length="10" not-null="true"/>
        </many-to-one>
        <property name="capacity">
            <column name="capacity" sql-type="int4" length="10" not-null="true"/>
        </property>
        <property name="unitNumber">
            <column name="unit_number" sql-type="int4" length="10" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>