<hibernate-configuration>
 	<session-factory>		
 	 	<!-- Database connection settings -->	
 		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
 		<property name="hibernate.connection.url"> jdbc:postgresql://127.0.0.1:5432/BookStore</property>
 		<property name="connection.username">student</property>
 		<property name="connection.password">Comp442</property>
 		<property name="transaction.factory_class">org.hibernate.engine.transaction.internal.jdbc.JdbcTransactionFactory</property>

